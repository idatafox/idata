<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>MultipleActionsAndFriendlyURLDemo</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>MultipleActionsAndFriendlyURLDemo-portlet</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>multiple-actions-example</portlet-name>
		<icon>/icon.png</icon>
		
		<!-- 2014.8.16 set up a mapping entity authored by elearn007.com -->
		
		<friendly-url-mapper-class>
             com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper
      </friendly-url-mapper-class>

        <friendly-url-mapping>>multiple-actions-example</friendly-url-mapping>

        <friendly-url-routes>
       com/elearn007/liferay/teach/portlet/multiple-actions-example-friendly-url-routes.xml
       </friendly-url-routes>
       
		
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			multiple-actions-example-portlet
		</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>