<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>elearn007-testevent</portlet-name>
		<display-name>Elearn007 Testevent</display-name>
		<portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Elearn007 Testevent</title>
			<short-title>Elearn007 Testevent</short-title>
			<keywords>Elearn007 Testevent</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>test-event-pub</portlet-name>
		<display-name>Test Event Pub</display-name>
		<portlet-class>
			com.elearn007.liferay.teach.TestEventPub
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/testeventpub/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Test Event Pub</title>
			<short-title>Test Event Pub</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		
		 <supported-publishing-event xmlns:x='http://elearn007.com'>
                <qname>x:sendPriceInfo</qname>
          </supported-publishing-event>
          
	</portlet>
	<portlet>
		<portlet-name>test-event-listener</portlet-name>
		<display-name>Test Event Listener</display-name>
		<portlet-class>com.test.TestEventListener</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/testeventlistener/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Test Event Listener</title>
			<short-title>Test Event Listener</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		
		   <supported-processing-event xmlns:x='http://elearn007.com'>
                <qname>x:sendPriceInfo</qname>
            </supported-processing-event>
            
	</portlet>
	
	     <event-definition xmlns:x='http://elearn007.com'>
            <qname>x:sendPriceInfo</qname>
            <value-type>java.lang.String</value-type>
        </event-definition>
        
</portlet-app>